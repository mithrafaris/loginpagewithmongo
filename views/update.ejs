                                <div class="mb-3"><label for="email" class="form-label">Email ID</label>
                                    <input type="email" name="email" id="email" class="form-control my-2" />
                                </div>
                        <div class="mb-3"><label for="password" class="form-label">password</label>
                            <input type="text" id="password" name="password" maxlength="6" class="form-control my-2" />
                        </div>
                        <div class="mb-3"><label for="password" class="form-label">confirm password</label>
                            <input type="text" id="password" name="password" maxlength="6" class="form-control my-2" />
                        </div>
                        
                       
                        <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                        <button type="submit" class="btn btn-warning btn-lg ms-2">Submit form</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
